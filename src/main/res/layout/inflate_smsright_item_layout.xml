<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55e3e3e3"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView_SMS_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:30:25"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView_SMS_Header"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_SMS_Date"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textView_SMS_Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxxxxxxxxx"
        android:layout_marginRight="10dp"
        android:background="@drawable/chat_right_gb"
        android:layout_alignBottom="@+id/imageView_SMS_Header"
        android:layout_toStartOf="@+id/imageView_SMS_Header"/>

</RelativeLayout>
